{% extends "base.html" %}

{% block title %}Browse Templates - PMBlueprints{% endblock %}

{% block content %}
<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 fw-bold">Browse Templates</h1>
            <p class="text-muted">Discover professional project management templates for your industry</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form method="GET" id="filterForm">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label for="industry" class="form-label">Industry</label>
                                <select class="form-select" name="industry" id="industry">
                                    <option value="">All Industries</option>
                                    {% for industry in industries %}
                                    <option value="{{ industry }}" {% if current_industry == industry %}selected{% endif %}>
                                        {{ industry }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="category" class="form-label">Category</label>
                                <select class="form-select" name="category" id="category">
                                    <option value="">All Categories</option>
                                    {% for category in categories %}
                                    <option value="{{ category }}" {% if current_category == category %}selected{% endif %}>
                                        {{ category }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="search" class="form-label">Search</label>
                                <input type="text" class="form-control" name="search" id="search" 
                                       value="{{ current_search }}" placeholder="Search templates...">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search me-1"></i>Filter
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Message -->
    {% if error_message %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger" role="alert">
                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Error Loading Templates</h5>
                <p class="mb-0">{{ error_message }}</p>
                <hr>
                <p class="mb-0 small">Please try refreshing the page or contact support if the problem persists.</p>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Results -->
    <div class="row mb-4">
        <div class="col-12">
            <p class="text-muted mb-0">
                Showing {{ templates.total }} template{{ 's' if templates.total != 1 else '' }}
                {% if current_industry or current_category or current_search %}
                (filtered)
                {% endif %}
            </p>
        </div>
    </div>

    <!-- Templates Grid -->
    <div class="row g-4" id="templatesGrid">
        {% for template in templates.items %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm template-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <span class="badge bg-primary">{{ template.industry }}</span>
                        {% if template.is_premium %}
                        <span class="badge bg-warning text-dark">Premium</span>
                        {% endif %}
                    </div>
                    
                    <h5 class="card-title">{{ template.name }}</h5>
                    <p class="card-text text-muted small">{{ template.description if template.description else 'Professional project management template for ' + template.industry }}</p>
                    
                    <div class="template-meta mb-3">
                        <small class="text-muted">
                            <i class="fas fa-tag me-1"></i>{{ template.category }}
                        </small>
                        <br>
                        <small class="text-muted">
                            <i class="fas fa-download me-1"></i>{{ template.downloads }} downloads
                        </small>
                    </div>
                </div>
                
                <div class="card-footer bg-transparent border-0">
                    <a href="{{ url_for('templates.download', template_id=template.id) }}" 
                       class="btn btn-primary w-100">
                        <i class="fas fa-download me-1"></i>Download
                    </a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4>No templates found</h4>
                <p class="text-muted">Try adjusting your filters or search terms.</p>
                <a href="{{ url_for('templates.browse') }}" class="btn btn-primary">
                    Clear Filters
                </a>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Pagination -->
    {% if templates.pages > 1 %}
    <div class="row mt-5">
        <div class="col-12">
            <nav aria-label="Template pagination">
                <ul class="pagination justify-content-center">
                    {% if templates.has_prev %}
                    <li class="page-item">
                        <a class="page-link" href="{{ url_for('templates.browse', page=templates.prev_num, 
                           industry=current_industry, category=current_category, search=current_search) }}">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    {% endif %}
                    
                    {% for page_num in templates.iter_pages() %}
                        {% if page_num %}
                            {% if page_num != templates.page %}
                            <li class="page-item">
                                <a class="page-link" href="{{ url_for('templates.browse', page=page_num,
                                   industry=current_industry, category=current_category, search=current_search) }}">
                                    {{ page_num }}
                                </a>
                            </li>
                            {% else %}
                            <li class="page-item active">
                                <span class="page-link">{{ page_num }}</span>
                            </li>
                            {% endif %}
                        {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                        {% endif %}
                    {% endfor %}
                    
                    {% if templates.has_next %}
                    <li class="page-item">
                        <a class="page-link" href="{{ url_for('templates.browse', page=templates.next_num,
                           industry=current_industry, category=current_category, search=current_search) }}">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

{% block extra_scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit form on filter change
    const filterForm = document.getElementById('filterForm');
    const industrySelect = document.getElementById('industry');
    const categorySelect = document.getElementById('category');
    
    industrySelect.addEventListener('change', function() {
        filterForm.submit();
    });
    
    categorySelect.addEventListener('change', function() {
        filterForm.submit();
    });
    
    // Search on Enter key
    const searchInput = document.getElementById('search');
    searchInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            filterForm.submit();
        }
    });
});
</script>
{% endblock %}

