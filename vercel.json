{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/templates/(.*\\.(xlsx?|docx?|pptx?|pdf))",
      "dest": "/public/templates/$1",
      "headers": {
        "Content-Disposition": "attachment"
      }
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}

