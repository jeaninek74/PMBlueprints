{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/templates/(.+\\.(xlsx?|docx?|pptx?|pdf))",
      "headers": {
        "Content-Disposition": "attachment",
        "Cache-Control": "public, max-age=31536000"
      },
      "dest": "/public/templates/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}

